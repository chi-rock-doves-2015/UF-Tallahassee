<section>
  <h3>Proposal</h3>
  <h2><%= @proposal.title %></h2>

  <dl>
    <dt>Faculty Sponsor</dt>
    <dd><%= @proposal.faculty.name %></dd>
    <dt>Date Created</dt>
    <dd><%= @proposal.created_at.strftime("%d %b, %Y") %></dd>
    <dt>Last Updated</dt>
    <dd><%= @proposal.updated_at.strftime("%d %b, %Y") %></dd>
  </dl>

  <section class="hypothesis-container">
    <h3>Hypothesis</h3>
    <p><%= @proposal.hypothesis %></p>
  </section>

  <section class="background-container">
    <h3>Background</h3>
    <p><%= @proposal.background %></p>
  </section>

  <section>
  <h3>Experiments</h3>
  <section>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Researcher</th>
          <th>Date Created</th>
          <th>Last Updated</th>
        </tr>
      </thead>
      <tbody>
        <%= render @proposal.experiments %>
      </tbody>
    </table>
  </section>
  </section>

<br>
<br>
  <section>
    <h3>Comments</h3>
    <%= render @proposal.comments %>
  </section>
</section>





