<h2>Registration</h2>
<div class='form'>
  <%= form_for @user do |f| %>
    <table>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :name, "Display Name" %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
      <tr>
        <td><%= f.label :role %></td>
        <td><%= f.select :role,  collection: User.roles.keys %></td>
      </tr>
        <td><%= f.submit %></td>
      </tr>
    </table>
  <% end %>
</div>
